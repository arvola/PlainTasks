{
    "name": "Monokai",
    "author": "arvola, based on Monokai by Sublime HQ",
    "variables":
    {
        "background": "#222222",
        "foreground": "#f8f8f2",
        "selection": "#444444",
        "selection_border": "#1c1c1c",
        "caret": "#f8f8f0",
        "find_highlight": "#ffe792",
        "invalid": "#ad271c",
        "black": "#000000",
        "comment": "#b6cf9d",
        "grey": "#3b3a32",
        "orange": "#ff7f00",
        "done": "#d3d0c8",
        "done_tags": "color(var(done) alpha(0.31))",
        "cancelled_tags": "color(var(done) alpha(0.31))",
        "notes": "#807a62",
        "today": "#ae81ff",
        "project_background": "color(var(selection) alpha(0.5))",
        "url": "#003e7290",
        "tag": "#65d8e6",
        "cancelled_bullet": "#aa1f2a",
        "project": "#f92672",
        "critical": "#ff0000",
        "text_modifiers": "#d3d0c860",
        "white": "#ffffff",
        "completed": "var(comment)",
        "completed_bullet": "#a6e22e",
        "cancelled": "#75715e",
        "separator": "var(cancelled)"
    },
    "globals":
    {
        "foreground": "var(foreground)",
        "background": "var(background)",
        "caret": "var(caret)",
        "invisibles": "var(grey)",
        "line_highlight": "var(selection)",
        "selection": "var(selection)",
        "selection_border": "var(selection_border)",
        "find_highlight_foreground": "var(black)",
        "find_highlight": "var(find_highlight)"
    },
    "rules":
    [
        {
            "name": "Done tags",
            "scope": "entity.other.tag.cancelled",
            "foreground": "var(done_tags)"
        },
        {
            "name": "Comment",
            "scope": "comment",
            "foreground": "var(comment)",
            "font_style": "italic"
        },
        {
            "name": "Pending Tag Punctuation",
            "scope": "punctuation.definition.tag.pending",
            "foreground": "var(tag)",
            "font_style": "bold"
        },
        {
            "name": "Pending Tag Name",
            "scope": "entity.name.tag.pending",
            "foreground": "var(tag)",
            "font_style": "bold"
        },
        {
            "name": "Pending Attribute Content",
            "scope": "entity.other.attribute.content.pending",
            "foreground": "var(tag)",
            "font_style": "bold"
        },
        {
            "name": "Pending Attribute Parenthesis",
            "scope": "punctuation.section.parens.attribute.pending",
            "foreground": "var(tag)",
            "font_style": "bold"
        },
        {
            "name": "Notes",
            "scope": "markup.notes",
            "foreground": "var(notes)"
        },
        {
            "name": "Pending task",
            "scope": "markup.list",
            "font_style": "italic"
        },
        {
            "name": "Done bullet",
            "scope": "punctuation.definition.bullet.completed",
            "foreground": "var(completed_bullet)",
            "font_style": "bold"
        },
        {
            "name": "Done task",
            "scope": "markup.list.item.completed.todo",
            "foreground": "var(completed)",
            "font_style": "italic"
        },
        {
            "name": "Cancelled bullet",
            "scope": "punctuation.definition.bullet.cancelled",
            "foreground": "var(cancelled_bullet)"
        },
        {
            "name": "Cancelled task",
            "scope": "markup.list.item.cancelled.todo",
            "foreground": "var(cancelled)",
            "font_style": "italic"
        },
        {
            "name": "Cancel tags",
            "scope": "entity.name.tag.cancelled.todo",
            "foreground": "var(cancelled_tags)"
        },
        {
            "name": "Project",
            "scope": "markup.heading",
            "foreground": "var(project)",
            "background": "var(project_background)",
            "font_style": "bold underline"
        },
        {
            "name": "Archive Separator",
            "scope": "meta.punctuation.archive.todo",
            "foreground": "var(separator)"
        },
        {
            "name": "Separator",
            "scope": "meta.punctuation.separator.todo",
            "foreground": "var(separator)"
        },
        {
            "name": "Italic punctuation",
            "scope": "punctuation.definition.italic",
            "foreground": "var(text_modifiers)"
        },
        {
            "name": "Italic",
            "scope": "todo.italic",
            "font_style": "italic"
        },
        {
            "name": "Bold punctuation",
            "scope": "punctuation.definition.bold",
            "foreground": "var(text_modifiers)",
            "font_style": "normal"
        },
        {
            "name": "Bold",
            "scope": "todo.bold",
            "font_style": "bold"
        },
        {
            "name": "URL",
            "scope": "todo.url",
            "foreground": "color(var(url) alpha(0.56))",
            "font_style": "bold"
        },
        {
            "name": "Invalid",
            "scope": "invalid",
            "foreground": "var(white)",
            "background": "var(invalid)"
        },
        {
            "name": "Today",
            "scope": "string.other.tag.todo.today",
            "foreground": "var(today)",
            "background": "var(background)",
            "font_style": "bold"
        },
        {
            "name": "High",
            "scope": "string.other.tag.todo.high",
            "foreground": "var(black)",
            "background": "var(orange)",
            "font_style": "bold"
        },
        {
            "name": "Low",
            "scope": "string.other.tag.todo.low",
            "foreground": "var(white)",
            "background": "var(background)",
            "font_style": "bold"
        },
        {
            "name": "Critical",
            "scope": "string.other.tag.todo.critical",
            "foreground": "var(black)",
            "background": "var(critical)",
            "font_style": "bold"
        }
    ]
}